/* pages/ershouche/ershouche.wxss */
.header .text{
    margin: 0 90rpx;
}
.yin1{
    position: absolute;
    /* z-index: -1; */
    width: 100%;
    transition: all .5s;
    overflow: auto;
    background-color: #fff;
}
.name {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding:0 40rpx;
    box-sizing: border-box;
    overflow: hidden;
    border-bottom: 1rpx solid #e6e6e6;
    color: rgb(65, 65, 65);
    font-size: 30rpx;
}
.name .image{
    width: 50rpx;
    height: 50rpx;
    margin-right: 30rpx;
    vertical-align: middle;
}
.yin2{
    /* width: 500rpx;{} */
    height: 1160rpx;
    background-color: rgba(0, 0, 0, 0.541);
    position: fixed;
    right: 0;
    transition: all .5s;
    overflow: hidden;
    z-index: 300;
}
.chexi{
    width: 400rpx;
    height: 100%;
    background-color: #fff;
    position: absolute;
    right: 0;
    padding-left: 30rpx;
}
.chexi .list{
    width: 100%;
    height: 80rpx;
    border-bottom: 1rpx solid #e6e6e6;
    line-height: 80rpx;
}
.listul{
    margin: auto;
    width: 680rpx;
    /* height: 500rpx; */
  
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .list{
    margin-top: 40rpx;
    display: inline-block;
    width: 320rpx;
    height: 500rpx;
   
  }
  .list image{
    width: 320rpx;
    height: 280rpx;
    border-radius: 10rpx;
  }
  .list-title{
    box-sizing: border-box;
    padding-left: 15rpx;
    width: 320rpx;
    font-weight: 600;
    height: 84rpx;
    overflow: hidden;
  }
  .list-msg{
    box-sizing: border-box;
    padding-left: 15rpx;
    padding-top: 20rpx;
    width: 320rpx;
    font-weight: 400;
    color: #999;
    font-size: 22rpx;
  }
  .list-price{
    padding-left: 15rpx;
    padding-top: 10rpx;
    width: 320rpx;
    font-weight: 600;
    color: #e73424;
    font-size: 30rpx;
  }
  .none{
      font-size: 50rpx;
      color: #e73424;
      padding: 100rpx 180rpx;
  }
  .yin3{
      position: absolute;
      width: 100%;
      height: 400rpx;
      background-color: #fff;
      border-radius: 0 0 50rpx 50rpx;
      transition: all .5s;
      overflow: hidden;
  }
  .hnk{
      display: inline-block;
      vertical-align: top;
  }
  .kk{
      width: 220rpx;
      height: 80rpx;
      /* background-color: rgb(80, 100, 100); */
      margin: 15rpx;
      font-size: 30rpx;
      line-height: 80rpx;
  }
  .kk .image{
      width: 60rpx;
      height: 60rpx;
      margin-right: 15rpx;
      vertical-align: middle;
  }
  